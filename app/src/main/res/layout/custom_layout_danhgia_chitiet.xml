<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêu đề"
        android:textColor="@color/colorFacebook"
        android:textStyle="bold"/>
    <RatingBar
        android:id="@+id/rbDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        style="?android:ratingBarStyleSmall"/>

    <TextView
            android:id="@+id/txtWrittenBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Được đăng bởi"
            android:layout_weight="1"
            android:textStyle="italic|bold"
            android:textColor="@color/colorLittleGray"/>
    <TextView
            android:id="@+id/txtNgayDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày đăng"
            android:textColor="@color/colorLittleGray"
            android:layout_weight="1"
            android:textStyle="italic"/>

    <TextView
        android:id="@+id/txtNoiDung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="13sp"/>
</LinearLayout>