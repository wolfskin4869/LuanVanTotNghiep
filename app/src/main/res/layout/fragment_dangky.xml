<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn cần điền đầy đủ các thông tin sau"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_txtHoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/txtHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ tên"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ Email"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_txtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <com.example.lenovo.luanvantotnghiep.MyPublic.CustomEditText.PasswordEditText
            android:id="@+id/txtMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            app:useStrike="true"
            app:useValidate="true"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu phải bao gồm 8 ký tự và một chữ hoa"
        android:layout_margin="10dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_txtMatKhauAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <com.example.lenovo.luanvantotnghiep.MyPublic.CustomEditText.PasswordEditText
            android:id="@+id/txtMatKhauAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lại Mật khẩu"
            app:useStrike="true"
           />
    </android.support.design.widget.TextInputLayout>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tôi đồng ý với các điều khoản bảo mật của Shopping Online"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btnDangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:background="@drawable/border_dangnhap"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoặc đăng ký bằng :"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDKFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facebook"
            android:background="@drawable/border_facebook"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/colorFacebook"
            android:textStyle="bold"
            android:drawableLeft="@drawable/facebookiconsmall"/>
        <Button
            android:id="@+id/btnDKGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Google"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/border_google"
            android:textColor="@color/colorGoogle"
            android:drawableRight="@drawable/googleplussmall"/>
    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
