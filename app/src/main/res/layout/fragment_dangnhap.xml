<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:gravity="center">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.example.lenovo.luanvantotnghiep.MyPublic.CustomEditText.ClearEditText
            android:id="@+id/txtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên đăng nhập hoặc Email"
            android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.example.lenovo.luanvantotnghiep.MyPublic.CustomEditText.PasswordEditText
            android:id="@+id/txtMatKhauDN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textSize="20sp"
            app:useStrike="true"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txtQuenMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:text="Quên mật khẩu?"
        android:textColor="#1100ff"
        android:typeface="monospace" />
    <Button
        android:id="@+id/btnDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:background="@drawable/border_dangnhap"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Facebook"
            android:background="@drawable/border_facebook"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:textColor="@color/colorFacebook"
            android:textStyle="bold"
            android:drawableLeft="@drawable/facebookiconsmall"/>
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Google"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/border_google"
            android:textColor="@color/colorGoogle"
            android:drawableRight="@drawable/googleplussmall"/>
    </LinearLayout>

</LinearLayout>